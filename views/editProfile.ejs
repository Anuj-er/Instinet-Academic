<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Profile - InstiNet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <%- include('./partials/header', {user: user}) %>
    
    <div class="dashboard-layout">
        <%- include('./partials/sidebar', {user: user}) %>
        
        <div class="dashboard-content">
            <div class="dashboard-header">
                <h1 class="dashboard-title">Edit Profile</h1>
                <div class="dashboard-actions">
                    <a href="/profile" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
                </div>
            </div>
            
            <div class="profile-container">
                <% if (subtle && subtle.length > 0) { %>
                    <div class="alert-success"><i class="fas fa-check-circle"></i> <%= subtle %></div>
                <% } %>
                <% if (error && error.length > 0) { %>
                    <div class="alert-danger"><i class="fas fa-exclamation-circle"></i> <%= error %></div>
                <% } %>
                
                <form action="/profile/update" method="POST">
                    <!-- Personal Information -->
                    <div class="profile-section">
                        <div class="profile-section-header">
                            <h3 class="profile-section-title"><i class="fas fa-user"></i> Personal Information</h3>
                        </div>
                        <div class="form-grid">
                            <div class="form-group">
                                <label>First Name <span class="required">*</span></label>
                                <input type="text" name="firstName" class="form-input" value="<%= user.firstName || '' %>" required>
                            </div>
                            <div class="form-group">
                                <label>Last Name <span class="required">*</span></label>
                                <input type="text" name="lastName" class="form-input" value="<%= user.lastName || '' %>" required>
                            </div>
                            <div class="form-group">
                                <label>Email <span class="required">*</span></label>
                                <input type="email" name="email" class="form-input" value="<%= user.email || '' %>" required>
                            </div>
                            <div class="form-group">
                                <label>Phone Number</label>
                                <input type="text" name="phoneNumber" class="form-input" value="<%= user.phoneNumber || '' %>" placeholder="+1234567890">
                            </div>
                            <div class="form-group">
                                <label>Gender</label>
                                <select name="gender" class="form-input">
                                    <option value="">Select Gender</option>
                                    <option value="male" <%= user.gender === 'male' ? 'selected' : '' %>>Male</option>
                                    <option value="female" <%= user.gender === 'female' ? 'selected' : '' %>>Female</option>
                                    <option value="other" <%= user.gender === 'other' ? 'selected' : '' %>>Other</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Date of Birth</label>
                                <input type="date" name="dateOfBirth" class="form-input" value="<%= user.dateOfBirth ? user.dateOfBirth.toISOString().substring(0,10) : '' %>">
                            </div>
                        </div>
                    </div>
                    
                    <!-- Address Information -->
                    <div class="profile-section">
                        <div class="profile-section-header">
                            <h3 class="profile-section-title"><i class="fas fa-map-marker-alt"></i> Address</h3>
                        </div>
                        <div class="form-grid">
                            <div class="form-group form-group-full">
                                <label>Street Address</label>
                                <input type="text" name="address[street]" class="form-input" placeholder="Street Address" value="<%= user.address?.street || '' %>">
                            </div>
                            <div class="form-group">
                                <label>City</label>
                                <input type="text" name="address[city]" class="form-input" placeholder="City" value="<%= user.address?.city || '' %>">
                            </div>
                            <div class="form-group">
                                <label>State</label>
                                <input type="text" name="address[state]" class="form-input" placeholder="State" value="<%= user.address?.state || '' %>">
                            </div>
                            <div class="form-group">
                                <label>Country</label>
                                <input type="text" name="address[country]" class="form-input" placeholder="Country" value="<%= user.address?.country || '' %>">
                            </div>
                            <div class="form-group">
                                <label>ZIP Code</label>
                                <input type="text" name="address[zipCode]" class="form-input" placeholder="ZIP Code" value="<%= user.address?.zipCode || '' %>">
                            </div>
                        </div>
                    </div>
                    
                    <% if (user.role === 'student') { %>
                        <!-- Student Details -->
                        <div class="profile-section">
                            <div class="profile-section-header">
                                <h3 class="profile-section-title"><i class="fas fa-graduation-cap"></i> Student Details</h3>
                            </div>
                            <div class="form-grid">
                                <div class="form-group">
                                    <label>Enrollment Number</label>
                                    <input type="text" name="studentDetails[enrollmentNumber]" class="form-input" value="<%= user.studentDetails?.enrollmentNumber || '' %>">
                                </div>
                                <div class="form-group">
                                    <label>Course Name</label>
                                    <input type="text" name="studentDetails[courseName]" class="form-input" value="<%= user.studentDetails?.courseName || '' %>">
                                </div>
                                <div class="form-group">
                                    <label>Department</label>
                                    <select name="studentDetails[department]" class="form-input">
                                        <option value="">Select Department</option>
                                        <option value="CSE" <%= user.studentDetails?.department === 'CSE' ? 'selected' : '' %>>CSE</option>
                                        <option value="ECE" <%= user.studentDetails?.department === 'ECE' ? 'selected' : '' %>>ECE</option>
                                        <option value="ME" <%= user.studentDetails?.department === 'ME' ? 'selected' : '' %>>ME</option>
                                        <option value="CE" <%= user.studentDetails?.department === 'CE' ? 'selected' : '' %>>CE</option>
                                        <option value="EE" <%= user.studentDetails?.department === 'EE' ? 'selected' : '' %>>EE</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Year</label>
                                    <input type="number" name="studentDetails[year]" class="form-input" value="<%= user.studentDetails?.year || '' %>" min="1" max="5">
                                </div>
                                <div class="form-group">
                                    <label>Semester</label>
                                    <input type="number" name="studentDetails[semester]" class="form-input" value="<%= user.studentDetails?.semester || '' %>" min="1" max="10">
                                </div>
                                <div class="form-group">
                                    <label>Guardian Name</label>
                                    <input type="text" name="studentDetails[guardianName]" class="form-input" value="<%= user.studentDetails?.guardianName || '' %>">
                                </div>
                                <div class="form-group">
                                    <label>Guardian Contact</label>
                                    <input type="text" name="studentDetails[guardianContact]" class="form-input" value="<%= user.studentDetails?.guardianContact || '' %>">
                                </div>
                                <div class="form-group">
                                    <label>Hostel Resident</label>
                                    <select name="studentDetails[isHostelResident]" class="form-input">
                                        <option value="false" <%= user.studentDetails?.isHostelResident === false ? 'selected' : '' %>>No</option>
                                        <option value="true" <%= user.studentDetails?.isHostelResident === true ? 'selected' : '' %>>Yes</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Scholarship</label>
                                    <select name="studentDetails[hasScholarship]" class="form-input">
                                        <option value="false" <%= user.studentDetails?.hasScholarship === false ? 'selected' : '' %>>No</option>
                                        <option value="true" <%= user.studentDetails?.hasScholarship === true ? 'selected' : '' %>>Yes</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <% if (user.role === 'staff') { %>
                        <!-- Staff Details -->
                        <div class="profile-section">
                            <div class="profile-section-header">
                                <h3 class="profile-section-title"><i class="fas fa-chalkboard-teacher"></i> Staff Details</h3>
                            </div>
                            <div class="form-grid">
                                <div class="form-group">
                                    <label>Department</label>
                                    <select name="staffDetails[department]" class="form-input">
                                        <option value="">Select Department</option>
                                        <option value="CSE" <%= user.staffDetails?.department === 'CSE' ? 'selected' : '' %>>CSE</option>
                                        <option value="ECE" <%= user.staffDetails?.department === 'ECE' ? 'selected' : '' %>>ECE</option>
                                        <option value="ME" <%= user.staffDetails?.department === 'ME' ? 'selected' : '' %>>ME</option>
                                        <option value="CE" <%= user.staffDetails?.department === 'CE' ? 'selected' : '' %>>CE</option>
                                        <option value="EE" <%= user.staffDetails?.department === 'EE' ? 'selected' : '' %>>EE</option>
                                    </select>
                                </div>
                                <div class="form-group">
                                    <label>Designation</label>
                                    <input type="text" name="staffDetails[designation]" class="form-input" value="<%= user.staffDetails?.designation || '' %>">
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <% if (user.role === 'admin') { %>
                        <!-- Admin Details -->
                        <div class="profile-section">
                            <div class="profile-section-header">
                                <h3 class="profile-section-title"><i class="fas fa-user-shield"></i> Admin Details</h3>
                            </div>
                            <div class="form-grid">
                                <div class="form-group">
                                    <label>Department</label>
                                    <select name="adminDetails[department]" class="form-input">
                                        <option value="">Select Department</option>
                                        <option value="CSE" <%= user.adminDetails?.department === 'CSE' ? 'selected' : '' %>>CSE</option>
                                        <option value="ECE" <%= user.adminDetails?.department === 'ECE' ? 'selected' : '' %>>ECE</option>
                                        <option value="ME" <%= user.adminDetails?.department === 'ME' ? 'selected' : '' %>>ME</option>
                                        <option value="CE" <%= user.adminDetails?.department === 'CE' ? 'selected' : '' %>>CE</option>
                                        <option value="EE" <%= user.adminDetails?.department === 'EE' ? 'selected' : '' %>>EE</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                    <!-- Form Actions -->
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Save Changes</button>
                        <a href="/profile" class="btn btn-secondary"><i class="fas fa-times"></i> Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html> 